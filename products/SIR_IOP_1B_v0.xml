<?xml version="1.0"?>
<cd:ProductDefinition id="SIR_IOP_1B_v0" format="binary" last-modified="2018-11-02" xmlns:cd="http://www.stcorp.nl/coda/definition/2008/07" xmlns:ct="http://www.stcorp.nl/coda/test/2008/10">
  <cd:Record format="binary">
    <cd:Description>SIRAL L1B IOP root type</cd:Description>
    <cd:Field name="mph">
      <cd:NamedType id="MPH"/>
    </cd:Field>
    <cd:Field name="sph">
      <cd:NamedType id="SIR_L1B_SPH"/>
    </cd:Field>
    <cd:Field name="dsd">
      <cd:Array format="ascii">
        <cd:Dimension><![CDATA[int(/mph/num_dsd)]]></cd:Dimension>
        <cd:NamedType id="DSD"/>
      </cd:Array>
    </cd:Field>
    <cd:Field name="siral_l1b_mds">
      <cd:Array>
        <cd:Description>SIRAL L1B measurement data set</cd:Description>
        <cd:Dimension><![CDATA[int(/dsd[0]/num_dsr)]]></cd:Dimension>
        <cd:NamedType id="SIR_L1B_OP_MDSR"/>
      </cd:Array>
      <cd:BitOffset><![CDATA[8 * int(/dsd[0]/ds_offset)]]></cd:BitOffset>
    </cd:Field>
    <ct:NamedTest id="DSDTypeMDSR" path="dsd[0]/ds_type"/>
    <ct:NamedTest id="MPHRefDocOPL1" path="mph/ref_doc"/>
  </cd:Record>

